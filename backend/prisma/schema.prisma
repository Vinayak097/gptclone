generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  userId String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  conversations Converstion[]
  @@map("users")
}

model Converstion{
  id String @id @default(uuid())
  userId User @relation(fields:[userId],reference:[id])
  messages Message[]
  @@map("converstions)
}

model Message{
  id String @id @default(uuid())
  content String
  converstionId Converstion @relation([fields:[conversationId],reference[id]])
  role String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}
